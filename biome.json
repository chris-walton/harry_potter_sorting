{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "overrides": [
        {
            "include": [
                "packages/logger/**"
            ],
            "linter": {
                "rules": {
                    "suspicious": {
                        "noConsoleLog": "off"
                    }
                }
            }
        }
    ],
    "vcs": {
        "enabled": false,
        "clientKind": "git",
        "useIgnoreFile": false
    },
    "files": {
        "ignoreUnknown": false,
        "ignore": [
            "**/assets/**"
        ]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "tab"
    },
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single"
        }
    }
}